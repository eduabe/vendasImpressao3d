{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/plataformas",
      "dest": "/api/plataformas/index.js"
    },
    {
      "src": "/api/plataformas/([^/]+)",
      "dest": "/api/plataformas/[id].js?id=$1"
    },
    {
      "src": "/api/vendas",
      "dest": "/api/vendas/index.js"
    },
    {
      "src": "/api/vendas/([^/]+)",
      "dest": "/api/vendas/[id].js?id=$1"
    }
  ]
}
